<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h2>{{ image.title }}</h2>
    <button class="btn btn-danger" id="btn-delete" data-id="{{ image.uniqueId }}">
      <i class="fa fa-times"></i> Delete
    </button>
  </div>
  <div class="card-body">
    <p>{{ image.description }}</p>
    <div class="text-center">
      <img class="img-fluid" src="/public/upload/{{ image.filename }}" alt="{{ image.title }}">
    </div>
  </div>
  <div class="card-footer d-flex justify-content-between align-items-center">
    <button id="btn-like" class="btn btn-success" data-id="{{ image.filename }}">
      <i class="fas fa-thumbs-up mr-2"></i> Like
    </button>
    <p class="d-flex justify-content-between align-items-center m-0">
      <i class="fas fa-heart mr-2"></i>
      <span class="likes-count">{{ image.likes }}</span>
    </p>
    <p class="d-flex justify-content-between align-items-center m-0">
      <i class="fas fa-eye mr-2"></i>
      <span class="views-count">{{ image.views }}</span>
    </p>
    <p class="d-flex justify-content-between align-items-center m-0">
      <i class="fas fa-clock mr-2"></i>
      {{timeago image.timestamp }}
    </p>
  </div>
</div>

<div class="card mt-2">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3>Comments</h3>
    <button id="btn-toggle-comments" class="btn btn-info">
      <i class="fas fa-comments"></i> Show comments
    </button>
  </div>
  <div id="post-comments" class="card-body">
    <blockquote>
      <form action="/images/{{ image.uniqueId }}/comment" method="POST">
        <div class="form-gruop mb-2">
          <input type="text" class="form-control" name="name" placeholder="Your name">
        </div>
        <div class="form-group">
           <input type="email" class="form-control" name="email" placeholder="Your email"> 
        </div>
        <div class="form-group">
          <textarea id="postComment" class="form-control" name="comment" rows="2"></textarea>
        </div>
        <div class="form-group">
          <button id="btn-comment" class="btn btn-success">
            <i class="fas fa-comment"></i> Post
          </button>
        </div>
      </form>
    </blockquote>
    <ul class="list-group p-2">
      {{#each comments }}
        <li class="list-group-item">
          <div class="row">
            <a href="#" class="col-sm-2">
              <img src="http://gravatar.com/avatar/{{ gravatar }}?monsterid&s=45">
            </a>
            <blockquote class="col-sm-10">
              <p class="lead">{{ comment }}</p>
              <footer class="blockquote-footer">
                {{ name }} - {{ timeago timestamp }}
              </footer>
            </blockquote>
          </div>
        </li>
      {{/each}}
    </ul>
  </div>
</div>